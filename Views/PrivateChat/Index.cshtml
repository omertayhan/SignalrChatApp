@{
    ViewData["Title"] = "Private Channel";
}

<style>
    .messages-list {
        max-height: 300px;
        overflow-y: auto;
    }
</style>

<div class="container">
    <h2 class="display-4 mb-5">Private Channel</h2>

    <div class="form-group row mb-3">
        <label for="connectionId" class="col-sm-2 col-form-label">Connection Id</label>
        <div class="col-sm-10">
            <input type="text" id="connectionId" class="form-control" disabled />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="userInput" class="col-sm-2 col-form-label">User</label>
        <div class="col-sm-10">
            <input type="text" id="userInput" value="@User.Identity!.Name" class="form-control" disabled />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="receiverId" class="col-sm-2 col-form-label">Receiver Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="receiverId" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="messageInput" class="col-sm-2 col-form-label">Message</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="messageInput" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <button type="button" id="sendToUser" class="btn btn-primary">Send Message</button>
        </div>
    </div>

    <hr class="mb-4">

    <div class="row">
        <div class="col-md-12">
            <ul id="messagesList" class="list-group messages-list">
                <!-- Mesajlar buraya eklenecek -->
            </ul>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/privateChat.js"></script>
