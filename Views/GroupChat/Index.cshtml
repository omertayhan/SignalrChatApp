@{
    ViewData["Title"] = "Group Chat";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 m-auto">
            <h2 class="display-4 mb-5">Group Chat</h2>
            <form>
                <div class="form-group mb-3">
                    <input type="text" name="user-name" id="user-name" class="form-control" value="@User.Identity!.Name" placeholder="Type a user name" disabled />
                </div>
                <div class="form-group mb-3">
                    <input type="text" name="group-name" id="group-name" class="form-control" placeholder="Type a group name" />
                    <button type="button" id="join-group" class="btn btn-primary m-2">Join Group</button>
                    <button type="button" id="leave-group" class="btn btn-warning m-2">Leave Group</button>
                </div>
                <div class="form-group mb-3">
                    <input type="text" name="group-message" id="group-message-text" class="form-control" placeholder="Type a message" />
                    <button type="button" id="groupmsg" class="btn btn-primary m-2">Send</button>
                </div>
            </form>
        </div>
    </div>
    <hr class="mb-12">
    <div class="row">
        <div class="col-md-1">&nbsp;</div>
        <div class="col-md-10" id="messageList" style="max-height: 300px; overflow-y: auto;"></div>
    </div>
</div>
@section Scripts {

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/groupChat.js"></script>
}