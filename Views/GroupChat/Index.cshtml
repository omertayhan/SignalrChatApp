@{
    ViewData["Title"] = "Group Channel";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 m-auto">
            <h2 class="display-4 mb-5">Group Channel</h2>
            <form>
                <div class="form-group row mb-3">
                    <label for="user-name" class="col-sm-2 col-form-label">User</label>
                    <div class="col-sm-10">
                        <input type="text" name="user-name" id="user-name" class="form-control" value="@User.Identity!.Name" placeholder="Type a user name" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="group-name" class="col-sm-2 col-form-label">Group</label>
                    <div class="col-sm-8">
                        <input type="text" name="group-name" id="group-name" class="form-control" placeholder="Type a group name" />
                    </div>
                    <div class="col-sm-2">
                        <button type="button" id="join-group" class="btn btn-primary">Join</button>
                        <button type="button" id="leave-group" class="btn btn-warning">Leave</button>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label for="group-message-text" class="col-sm-2 col-form-label">Message</label>
                    <div class="col-sm-10">
                        <input type="text" name="group-message" id="group-message-text" class="form-control" placeholder="Type a message" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="button" id="groupmsg" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <hr class="mb-4">
    <div class="row">
        <div class="col-md-12">
            <ul id="messageList" class="list-group messages-list" style="max-height: 300px; overflow-y: auto;"></ul>
        </div>
    </div>
</div>
@section Scripts {

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/groupChat.js"></script>
}